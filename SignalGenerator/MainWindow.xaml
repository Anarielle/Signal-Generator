<Window x:Class="SignalGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <RadioButton x:Name="rbHarmonic" Content="Гармонический" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" IsChecked="True" />
        <Label Content="Вид сигнала" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbSquare" Content="Прямоугольный" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbTriangle" Content="Треугольный" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top"/>
        <Label Content="Параметры сигнала" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top"/>
        <WpfPlot x:Name="pOriginalSignal" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="180" Width="560" ScrollViewer.HorizontalScrollBarVisibility="Visible"/>
        <WpfPlot x:Name="pRecievedSignal" HorizontalAlignment="Right" Margin="0,190,10,0" VerticalAlignment="Top" Height="180" Width="560"/>
        <WpfPlot x:Name="pHarmonics" HorizontalAlignment="Right" Margin="0,380,10,0" VerticalAlignment="Top" Height="180" Width="560"/>
        <WpfPlot x:Name="pSpectrum" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="180" Width="560"/>
        <Slider x:Name="sAmplitude" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Width="120" Maximum="50" Minimum="1"/>
        <Slider x:Name="sFrequency" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" Width="120" Minimum="0.1" Maximum="1"/>
        <Slider x:Name="sPhase" HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top" Width="120" />
        <Label Content="Амлитуда" HorizontalAlignment="Left" Margin="135,141,0,0" VerticalAlignment="Top" Width="77"/>
        <Label Content="Частота" HorizontalAlignment="Left" Margin="135,177,0,0" VerticalAlignment="Top"/>
        <Label Content="Фаза" HorizontalAlignment="Left" Margin="135,219,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
